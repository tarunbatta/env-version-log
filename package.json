{
  "name": "version-stamper",
  "version": "1.0.4",
  "description": "A lightweight, zero-configuration version tracking utility for JavaScript/TypeScript applications",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "node --max-old-space-size=512 --expose-gc node_modules/.bin/jest --ci --maxWorkers=1 --maxConcurrency=1 --coverage --silent",
    "test:utils": "node --max-old-space-size=512 --expose-gc node_modules/.bin/jest __tests__/utils.test.ts --ci --maxWorkers=1 --maxConcurrency=1 --coverage --silent",
    "test:version": "node --max-old-space-size=512 --expose-gc node_modules/.bin/jest __tests__/version-tracker.test.ts --ci --maxWorkers=1 --maxConcurrency=1 --coverage --silent",
    "test:logger": "node --max-old-space-size=512 --expose-gc node_modules/.bin/jest __tests__/logger.test.ts --ci --maxWorkers=1 --maxConcurrency=1 --coverage --silent",
    "build": "npm run test:utils && npm run test:version && npm run test:logger && tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\" \"__tests__/**/*.ts\"",
    "prepare": "husky install",
    "prepublishOnly": "npm run build",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tarunbatta/version-stamper.git"
  },
  "keywords": [
    "version",
    "tracking",
    "spa",
    "react",
    "typescript",
    "build-number",
    "deployment",
    "versioning"
  ],
  "author": "Tarun Batta",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tarunbatta/version-stamper/issues"
  },
  "homepage": "https://github.com/tarunbatta/version-stamper#readme",
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^20.11.24",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "ts-jest": "^29.3.4",
    "tslib": "^2.6.2",
    "typescript": "~5.5.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
