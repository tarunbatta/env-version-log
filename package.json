{
  "name": "env-version-log",
  "version": "1.0.7",
  "description": "A TypeScript-friendly package for managing and tracking application versions, build numbers, and deployment information.",
  "type": "module",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "types": "./dist/types/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:types": "tsc -p tsconfig.types.json",
    "build": "npm run clean && npm run test:utils && npm run test:logger && npm run build:esm && npm run build:cjs",
    "test:utils": "node --experimental-vm-modules node_modules/.bin/jest __tests__/utils.test.ts --ci --maxWorkers=1 --maxConcurrency=1 --config=jest.config.mjs",
    "test:version": "node --experimental-vm-modules node_modules/.bin/jest __tests__/version-tracker --ci --maxWorkers=1 --maxConcurrency=1 --config=jest.config.mjs --testPathIgnorePatterns=__tests__/version-tracker",
    "test:logger": "node --experimental-vm-modules node_modules/.bin/jest __tests__/logger.test.ts --ci --maxWorkers=1 --maxConcurrency=1 --config=jest.config.mjs",
    "test": "npm run test:utils && npm run test:logger",
    "prepublishOnly": "npm run build",
    "prepare": "husky",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix"
  },
  "keywords": [
    "version",
    "build",
    "deployment",
    "typescript",
    "logging"
  ],
  "author": "Tarun Batta",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.24",
    "@typescript-eslint/parser": "^8.34.0",
    "eslint": "^9.28.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "npm run lint:fix"
    ]
  }
}
